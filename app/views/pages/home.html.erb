<div class="container">
<!-- Banneradd another image -->
<div class="row">
  <div class="col-md-12">
    <div class="banner text-center">
      <%= image_tag("main_picture.jpg", class: "img-fluid") %>

      <h1>Welcome to Your Rental Company</h1>
      <p class="lead">Find the perfect rental for any occasion!</p>

      <div>
         <%= link_to "Rent your favourite bag", bags_path, class: "btn btn-primary" %>

      </div>
    </div>
  </div>
</div>
</div>


  <!-- Carousel -->
  <div class="row mt-5">
    <div class="col-md-8 offset-md-2"> <!-- Adjusted column width to make the carousel smaller -->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag("carousel_image1.jpg", class: "d-block w-100") %> <!-- Adjusted image size to fit better -->
            <div class="carousel-caption text-white text-center">

            </div>
          </div>
          <div class="carousel-item">
            <%= image_tag("carousel_image2.jpg", class: "d-block w-100") %> <!-- Adjusted image size to fit better -->
            <div class="carousel-caption text-dark text-center">

            </div>
          </div>
          <div class="carousel-item">
            <%= image_tag("carousel_image3.jpg", class: "d-block w-100") %> <!-- Adjusted image size to fit better -->
            <div class="carousel-caption text-dark text-center">
              
            </div>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Rent with us -->
  <div class="row mt-5">
    <div class="col-md-6 offset-md-3 text-center">
    <%= link_to "Rent your bag!", new_bag_path, class:"btn btn-primary" %>
      <p class="lead">Start earning extra income by listing your items for rent with us!</p>
      <%= image_tag("rentwithus.jpg", class: "img-fluid mb-4") %>
      <div>
        <a href="#" class="btn btn-primary">Learn more</a>
      </div>
    </div>
  </div>
</div>
