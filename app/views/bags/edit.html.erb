<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit Bag</h3>
        <%= simple_form_for @bag do |f| %>
          <%= f.input :name %>
          <%# <%= f.input :photos, as: :file, input_html: {multiple: true} %>
          <%= f.input :brand %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :location %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
